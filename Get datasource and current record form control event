 [FormControlEventHandler(formControlStr(InventJournalCreate, RetailStoreInventory_InventLocationId), FormControlEventType::Modified)]
 public static void RetailStoreInventory_InventLocationId_OnModified(FormControl sender, FormControlEventArgs e)
 {
     FormRun formRun = sender.formRun();

     FormDataSource  inventJournalTable = formRun.dataSource(formDataSourceStr(InventJournalCreate,InventJournalTable));

     InventJournalTable currentLine = inventJournalTable.cursor();

     InventLocation inventLocation;

     if (currentLine.InventLocationId)
     {
         select firstOnly Name from inventLocation
         where inventLocation.InventLocationId == currentLine.InventLocationId;

         currentLine.InventLocationName = inventLocation.Name;
     }
     else
     {
         currentLine.InventLocationName = '';

     }
 }
